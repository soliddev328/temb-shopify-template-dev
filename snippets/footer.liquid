<footer class="site-footer small--text-center" role="contentinfo">

  <div class="wrapper">

    <div class="grid">

      {% if settings.footer_display_contact %}
      <div class="grid-item medium--one-half large--one-third">
        <h3>{{ settings.footer_contact_title }}</h3>
        <p>
          {% if settings.footer_contact_text != blank %}
            {{ settings.footer_contact_text }}
          {% else %}
            Add some text to show here in your <a href="/admin/themes" title="Edit theme settings"> theme settings</a>.
          {% endif %}
        </p>
      </div>
      {% endif %}

      {% if settings.footer_display_social %}
      <div class="grid-item medium--one-half large--one-third">
        <h3>{{ settings.footer_social_title }}</h3>

        {% comment %}
          Loop through the persistent theme settings and list out each social network link.
        {% endcomment %}
        <ul class="inline-list">
          {% if settings.twitter_link != blank %}<li class="social-link twitter"><a href="{{ settings.twitter_link }}" title="{{ shop.name }} on Twitter">Twitter</a></li>{% endif %}
          {% if settings.facebook_link != blank %}<li class="social-link facebook"><a href="{{ settings.facebook_link }}" title="{{ shop.name }} on Facebook">Facebook</a></li>{% endif %}
          {% if settings.pinterest_link != blank %}<li class="social-link pinterest"><a href="{{ settings.pinterest_link }}" title="{{ shop.name }} on Pinterest">Pinterest</a></li>{% endif %}
          {% if settings.google_plus_link != blank %}<li class="social-link google-plus"><a href="{{ settings.google_plus_link }}" title="{{ shop.name }} on Google+">Google+</a></li>{% endif %}
          {% if settings.instagram_link != blank %}<li class="social-link instagram"><a href="{{ settings.instagram_link }}" title="{{ shop.name }} on Instagram">Instagram</a></li>{% endif %}
          {% if settings.tumblr_link != blank %}<li class="social-link tumblr"><a href="{{ settings.tumblr_link }}" title="{{ shop.name }} on Tumblr">Tumblr</a></li>{% endif %}
          {% if settings.youtube_link != blank %}<li class="social-link youtube"><a href="{{ settings.youtube_link }}" title="{{ shop.name }} on YouTube">YouTube</a></li>{% endif %}
          {% if settings.vimeo_link != blank %}<li class="social-link vimeo"><a href="{{ settings.vimeo-url }}" title="{{ shop.name }} on Vimeo">Vimeo</a></li>{% endif %}
        </ul>
      </div>
      {% endif %}

      {% if settings.footer_display_newsletter %}
      <div class="grid-item large--one-third">
        <h3>{{ settings.footer_newsletter_title }}</h3>
        {% include 'newsletter-form' %}
      </div>
      {% endif %}
    </div>

    <hr>

    {% comment %}
      Loop through available payment methods and show their icons.
    {% endcomment %}
    {% unless shop.enabled_payment_types == empty %}
    <h4 class="text-center">Accepted Payments</h4>
    <ul class="inline-list payment-icons text-center">
      {% for type in shop.enabled_payment_types %}
      <li>
        <img src="{{ type | payment_type_img_url }}" />
      </li>
      {% endfor %}
    </ul>
    {% endunless %}

    <p class="text-center">
      <a href="http://shopify.com/timber">Timber</a> by <a href="http://www.shopify.com?ref=Timber">Shopify</a><br>
      <small>{{ powered_by_link }}</small>
    </p>

  </div>

</footer>